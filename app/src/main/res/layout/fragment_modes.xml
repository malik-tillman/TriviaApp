<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/view"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"/>

    <LinearLayout android:id="@+id/modesView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="vertical">

        <TextView android:id="@+id/modes_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/game_mode_title"
            android:textColor="@android:color/white"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center_vertical">

            <com.airbnb.lottie.LottieAnimationView android:id="@+id/left_nav"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:rotation="180"
                app:lottie_rawRes="@raw/navigator"
                app:lottie_loop="true"
                app:lottie_autoPlay="true"/>

            <ImageView android:id="@+id/modesGif"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_gravity="center"
                android:scaleType="fitXY"
                android:adjustViewBounds="true"/>

            <com.airbnb.lottie.LottieAnimationView android:id="@+id/right_nav"
                android:layout_width="50dp"
                android:layout_height="50dp"
                app:lottie_rawRes="@raw/navigator"
                app:lottie_loop="true"
                app:lottie_autoPlay="true"/>

        </LinearLayout>

        <TextView android:id="@+id/header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/weathers_header"
            android:layout_gravity="center"
            android:textColor="@android:color/white"
            android:gravity="center"
            android:textSize="30sp"/>

        <TextView android:id="@+id/mode_summary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="50dp"
            android:layout_marginEnd="50dp"
            android:textColor="@android:color/white"
            android:gravity="center"
            android:text="@string/weather_summary"
            android:textSize="25sp"/>

    </LinearLayout>

</RelativeLayout>